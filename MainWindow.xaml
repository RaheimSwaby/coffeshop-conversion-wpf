<Window x:Class="coffeshop_conversion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:coffeshop_conversion"
        mc:Ignorable="d"
        Title="Coffee Shop" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="BeveragesDataGrid" Width="500"  HorizontalAlignment="Stretch" VerticalAlignment="Top" SelectionChanged="BeveragesDataGrid_SelectionChanged" />
        <Button x:Name="RemoveCoffeeButton" Content="Remove Coffee" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="100" Click="RemoveCoffeeButton_Click"/>
        <Button x:Name="AddCoffeeButton" Content="Add Coffee" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="100" Click="AddCoffeeButton_Click"/>


    </Grid>
</Window>
